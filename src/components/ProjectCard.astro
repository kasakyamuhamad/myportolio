---
const { title, description, link, image } = Astro.props;
---

<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="block bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 group"
>
  <div class="relative h-48 overflow-hidden">
    <img
      src={image || '/project-placeholder.jpg'}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
    />
  </div>

  <div class="p-6 text-center">
    <h3 class="text-2xl font-semibold text-gray-800 group-hover:text-indigo-600 transition">
      {title}
    </h3>
    <p class="text-gray-600 mt-3 mb-4 leading-relaxed">{description}</p>
    <span class="inline-block text-indigo-600 font-medium hover:underline">
      View Project â†’
    </span>
  </div>
</a>
